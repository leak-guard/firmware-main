{
    "version": "0.2.0",
    "configurations": [
        {
            "name": "Cortex Debug",
            "cwd": "${workspaceRoot}",
            "executable": "build/debug/firmware-main.elf",
            "request": "launch",
            "type": "cortex-debug",
            "servertype": "openocd",
            "breakAfterReset": false,
            "configFiles": [
                "openocd.cfg",
            ],
            "liveWatch": {
                "enabled": true,
                "samplesPerSecond": 5
            },
            "serverArgs": [ "-c gdb_breakpoint_override hard"],
            "svdFile": "Svd/stm32f7x6.svd",
            "showDevDebugOutput": "both"
        }
    ]
}